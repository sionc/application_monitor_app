        <h4 class="header">Events</h4>
        <div class="stream">
            <% @event_log_entries.each do |event_log_entry| %>
            <div class="item">
                <div class="stream-icon stream-warning"><i class="icon-warning icon-white"></i></div>
                <p class="date"><%= Time.at(event_log_entry.time_generated) unless event_log_entry.time_generated.nil? %></p>
                <h4><%= event_log_entry.source %></h4>
                <div class="row">
                    <p class="span9">
                        <% msg = event_log_entry.message[/(.*) Exception Stack Trace/] + "..." %>
                        <%= msg.nil? ? event_log_entry.message : msg %>
                        <br />
                        <%= link_to 'Details', event_log_entry %>
                    </p>
                </div>
            </div>
            <% end %>        
        </div>
